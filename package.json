{
  "name": "@distributed/atrium",
  "version": "1.0.0",
  "authors": [
    "Goamh <thomas@distributed.sh>"
  ],
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "node -r dotenv/config build/app.js",
    "build": "rimraf build/ && npm -s run generate && tsc -b",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:prisma:watch": "prisma generate --watch",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "migrate": "prisma migrate dev && prisma migrate deploy",
    "postinstall": "npm -s run generate",
    "dev": "npm-run-all --parallel dev:server dev:schema generate:prisma:watch",
    "dev:server": "ts-node-dev --exit-child --respawn --transpile-only -r dotenv/config ./src/app.ts | ./node_modules/.bin/pino-pretty",
    "dev:schema": "ts-node-dev --exit-child --no-notify --respawn --transpile-only src/schema.ts",
    "docker:setup": "docker-compose -p=atrium up -d",
    "test": "yarn test:lint && yarn test:jest",
    "test:build": "./node_modules/.bin/tsc -b",
    "test:jest": "dotenv -e .env.test jest --runInBand --detectOpenHandles --forceExit",
    "test:lint": "eslint --ext .js,.ts,.gql,.graphql src/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn test"
    }
  },
  "dependencies": {
    "@distributed/analytics-node": "^3.9.1",
    "@prisma/client": "2.28.0",
    "fastify": "^3.19.2",
    "fastify-compress": "^3.6.0",
    "fastify-cookie": "^5.3.0",
    "fastify-cors": "^6.0.2",
    "fastify-helmet": "^5.3.2",
    "fastify-rate-limit": "^5.6.0",
    "graphql": "^15.5.1",
    "graphql-middleware": "^6.0.10",
    "http-errors": "^1.8.0",
    "mercurius": "^8.1.1",
    "nanoid": "^3.1.22",
    "nexus": "^1.1.0",
    "nexus-plugin-prisma": "0.35.0",
    "url-regex-safe": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@distributed/eslint-config-backend": "^0.3.7",
    "@types/compression": "^1.7.1",
    "@types/dotenv": "^8.2.0",
    "@types/faker": "^5.5.7",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.8",
    "@types/pg": "^8.6.1",
    "@types/pino": "^6.3.11",
    "@types/ramda": "^0.27.44",
    "@vercel/node": "^1.11.1",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.32.0",
    "faker": "^5.5.3",
    "get-port": "^5.1.1",
    "graphql-request": "^3.5.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-deep-mock": "^0.3.5",
    "mercurius-integration-testing": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.7.1",
    "pino-pretty": "^5.1.2",
    "prettier": "^2.3.2",
    "prisma": "^2.28.0",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.3.5"
  }
}
