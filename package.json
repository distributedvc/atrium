{
  "name": "@distributed/atrium",
  "version": "1.0.0",
  "authors": [
    "Goamh <thomas@distributed.vc>"
  ],
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "node -r dotenv/config build/app.js",
    "build": "rimraf build/ && npm -s run generate && tsc -b",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:prisma:watch": "prisma generate --watch",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "seed": "ts-node ./prisma/seed/index.ts",
    "seed:catalogue": "ts-node prisma/seed/services/catalogue/index.ts",
    "migrate": "prisma migrate dev --preview-feature -c && prisma migrate deploy --preview-feature -c",
    "postinstall": "npm -s run generate",
    "dev": "npm-run-all --parallel dev:server dev:schema generate:prisma:watch",
    "dev:server": "ts-node-dev --exit-child --respawn --transpile-only -r dotenv/config ./src/app.ts | ./node_modules/.bin/pino-pretty",
    "dev:schema": "ts-node-dev --exit-child --no-notify --respawn --transpile-only src/schema.ts",
    "test": "yarn test:lint && yarn test:jest",
    "test:build": "./node_modules/.bin/tsc -b",
    "test:jest": "jest --runInBand --detectOpenHandles --forceExit",
    "test:lint": "eslint --ext .js,.ts,.gql,.graphql src/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn test"
    }
  },
  "dependencies": {
    "@distributed/analytics-node": "^3.8.8",
    "@prisma/client": "2.19.0",
    "fastify": "^3.14.0",
    "fastify-compress": "^3.4.2",
    "fastify-cookie": "^5.3.0",
    "fastify-cors": "^5.2.0",
    "fastify-helmet": "^5.3.1",
    "fastify-rate-limit": "^5.5.0",
    "graphql": "^15.5.0",
    "graphql-middleware": "^6.0.5",
    "http-errors": "^1.8.0",
    "mercurius": "^7.3.0",
    "nanoid": "^3.1.22",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "0.33.0",
    "url-regex-safe": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@distributed/eslint-config-backend": "^0.2.50",
    "@types/compression": "^1.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/faker": "^5.1.7",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/pg": "^7.14.11",
    "@types/pino": "^6.3.6",
    "@types/ramda": "^0.27.39",
    "@vercel/node": "^1.9.1",
    "aws-sdk": "2.858.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "faker": "^5.4.0",
    "get-port": "^5.1.1",
    "graphql-request": "^3.4.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "jest-deep-mock": "^0.3.5",
    "mercurius-integration-testing": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.1",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "prisma": "^2.19.0",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "4.2.3"
  }
}
